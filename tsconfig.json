{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "customConditions": ["react-native"],
    "target": "ES2020",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["./App.tsx", "src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts", "src/types/**/*.d.ts"]
}