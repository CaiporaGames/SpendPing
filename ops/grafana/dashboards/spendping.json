{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "type": "timeseries",
      "title": "Expenses created by tag (rate)",
      "targets": [
        { "expr": "rate(spendping_expense_created_total[5m])", "legendFormat": "{{tag}}" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "App opens per platform (rate)",
      "targets": [
        { "expr": "rate(spendping_app_open_total[5m])", "legendFormat": "{{platform}}" }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    },
    {
      "type": "heatmap",
      "title": "P95 GraphQL latency by operation",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(spendping_graphql_latency_ms_bucket[5m])) by (le,operation))" }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 }
    }
  ],
